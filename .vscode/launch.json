  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch local file",
      // デバッグ種別を指定（chrome/node/monoなど）
      "type": "chrome",
      // lanunchまたはattachを指定
      "request": "launch",
      // 読み込むHTMLファイルを指定（プロジェクトからのパスを指定）
      "file": "${workspaceRoot}/_dist/index.html"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "ポートへのアタッチ",
      "address": "localhost",
      "port": 5858
    }
  ]
}